<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRL"
        android:background="#21262D">


        <RelativeLayout
            android:id="@+id/repoInfoRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/repoLogoImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/repoNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/repoLogoImg"
                android:text="Kotlin.Coroutines"
                android:textColor="@color/button"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repoNameText"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/repoLogoImg"
                android:text="google"
                android:textColor="@color/button"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/repoDescText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ownerNameText"
                android:layout_marginTop="15dp"
                android:text="A collection of extension libraries for Jetpack Compose"
                android:textColor="@color/button"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/repoStarImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/repoDescText"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_star" />

            <TextView
                android:id="@+id/repoStarsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/repoStarImg"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/repoStarImg"
                android:text="6 today"
                android:textColor="@color/button"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/languageDotImg"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@id/repoStarImg"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/repoStarsText"
                android:src="@drawable/ic_baseline_circle" />

            <TextView
                android:id="@+id/repoLanguageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/repoStarsText"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/languageDotImg"
                android:text="Not available"
                android:textColor="@color/button" />

            <ImageView
                android:id="@+id/repoForksImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/repoStarImg"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_outline_polyline" />

            <TextView
                android:id="@+id/repoForksText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/repoForksImg"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/repoForksImg"
                android:text="229 Forks >"
                android:textColor="@color/button" />

            <Button
                android:id="@+id/trackRepoBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/repoForksImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Track repository"
                android:textAllCaps="false" />

        </RelativeLayout>


    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>