<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >


    <RelativeLayout
        android:id="@+id/issueNotificationParentRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_pr_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pull Request Created"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prNotificationCreatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10:55 - 12, Oct 2020"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prNotification_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_pr_activity"
            android:layout_marginTop="5dp"
            android:text="gfhjf fjkfh jfhf jkfhf jfjkfhajkfhj hfahf jhfjkf hfjhfh fjkfj fhnjkhfhj fhj3uheunhfuianjfuhenmnfu jiaf :"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pr_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prNotification_desc"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:text="Creator : Abhi Velekar"
            android:textStyle="bold" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>