<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/issueNotificationParentRL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue Created"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/txt_issueNotificationCreated"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10:55 - 12, Oct 2020"
            android:textStyle="bold"
            android:id="@+id/issueNotificationCreatedTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_issueNotificationCreated"
            android:text="gfhjf fjkfh jfhf jkfhf jfjkfhajkfhj hfahf jhfjkf hfjhfh fjkfj fhnjkhfhj fhj3uheunhfuianjfuhenmnfu jiaf :"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:id="@+id/issueNotification_desc"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issueNotification_desc"
            android:text="Creator : Abhi Velekar"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/issue_creator"/>


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView >