<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/issue_parent_RL">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/prOpenLogoImg"
            android:src="@drawable/ic_outline_open"/>

        <TextView
            android:id="@+id/pr_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/prOpenLogoImg"
            android:text="gfhjf fjkfh jfhf jkfhf jfjkfhajkfhj hfahf jhfjkf hfjhfh fjkfj fhnjkhfhj fhj3uheunhfuianjfuhenmnfu jiaf :"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10:55 - 12, Oct 2020"
            android:textStyle="bold"
            android:id="@+id/issueNotificationCreatedTime"
            android:layout_below="@+id/pr_desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pr_desc"
            android:text="Creator : Abhi Velekar"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:id="@+id/pr_creator"/>


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>